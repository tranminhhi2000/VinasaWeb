
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/sbadmin.cshtml";
}
<style>
    .button-lc {
        height: 40px;
        width: 150px;
        margin: 10px 10px;
        background: #F69928;
        color: #fff;
        border: 1px solid #ccc;
        border-radius: 20px;
    }

        .button-lc:hover {
            background-color: #051D65;
        }

    .icon {
        cursor: pointer;
        color: #F69928;
    }

    .action-icon:hover {
        color: #051D65;
    }

    .action-item {
        list-style-type: none;
        font-size: 18px
    }

    #confirmResult{
        display: none;
    }

    .action-list, .action-list:hover {
        text-decoration: none;
        color: #999;
    }

</style>
<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Hội Thảo</h1>


<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3" style=" display: flex; justify-content: space-between; align-items: center;">
        <div class="right-content">
            <h6 class="m-0 font-weight-bold text-primary" style="color: #19315D ">Danh sách quản lý các hội thảo</h6>
        </div>
        <div class="left-content">
            <button id="create" class="button-lc">Thêm Mới</button>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Tên Hội Nghị</th>
                        <th>Thời Gian Diễn Ra</th>
                        <th>Địa Điểm Diễn Ra</th>
                        <th>Chức Năng</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><a class="action-list" href="@Url.Action("Index")">Hội nghị kết nối đầu tư tổ chức tại TP. Hồ Chí Minh: chủ đề THÚC ĐẨY ĐẦU TƯ VÀ PHÁT TRIỂN HỆ SINH THÁI TÀI CHÍNH SỐ</a></td>
                        <td>
                            9:00 - 17:00 ngày 28/06/2022 (Thứ 3)
                        </td>
                        <td>
                            Sihub, 273 Điện Biên Phủ, Phường Võ Thị Sáu, Quận 3, TP. HCM
                        </td>
                        <td class="action" style=" display:flex; justify-content:space-around; align-items:center">
                            <li class="action-item">
                                <a href="@Url.Action("UpdateInfoS")" class="action-icon">
                                    <i class="fa-solid fa-pen-to-square icon"></i>
                                </a>
                            </li>
                            <li class="action-item">
                                <a href="" class="action-icon" type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                                    <i class="fa-solid fa-trash-can icon"></i>
                                </a>
                                <p id="confirmResult"></p>
                            </li>
                            <li class="action-item" id="list">
                                <a href="@Url.Action("DetailInfoS")" class="action-icon">
                                    <i class="fa-solid fa-circle-info icon"></i>
                                </a>
                            </li>
                        </td>
                    </tr>
                </tbody>
            </table>
            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Xoá Hội Thảo</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            Bạn có chắc chắn xoá?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Huỷ</button>
                            <button type="button" class="btn btn-primary" style=" background: #F69928; ">Đồng Ý</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>

    $('#create').click(function () {
        location.href = "@Url.Action("Create")";
    })

    const button = document.getElementById('confirmTrigger');
    const confirmResult = document.getElementById('confirmResult');
    button.addEventListener('click', function (e) {
        if (window.confirm('Bạn có chắc chắn xoá?')) {
            confirmResult.innerText = 'Yes';
        } else {
            confirmResult.innerText = 'No';
        }
    });


</script>



