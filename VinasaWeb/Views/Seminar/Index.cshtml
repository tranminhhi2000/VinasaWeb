
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/sbadmin.cshtml";
}
<style>
    .button-lc {
        height: 40px;
        width: 150px;
        margin: 10px 10px;
        background: #F69928;
        color: #fff;
        border: 1px solid #ccc;
        border-radius: 20px;
    }

        .button-lc:hover {
            background-color: #051D65;
        }

    .icon:hover {
        color: #051D65;
    }
</style>
<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Hội Thảo</h1>


<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3" style=" display: flex; justify-content: space-between; align-items: center;">
        <div class="right-content">
            <h6 class="m-0 font-weight-bold text-primary" style="color: #19315D ">Danh sách quản lý các doanh nghiệp đăng ký hội thảo</h6>
        </div>
        <div class="left-content">
            <button id="create" class="button-lc">Thêm Mới</button>
            <button class="button-lc" style=" width: 200px;">Import Excel</button>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Tên Hội Nghị</th>
                        <th>Tên Đơn Vị</th>
                        <th>Tên Người Tham Dự</th>
                        <th>Chức Danh</th>
                        <th>Số Điện Thoại</th>
                        <th>Chức Năng</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Thành Phố Smart</td>
                        <td>
                            Công ty Cổ phần FPT
                        </td>
                        <td>
                            Trương Gia Bình
                        </td>
                        <td>
                            Chủ tịch HĐQT
                        </td>
                        <td>
                            0937688958
                        </td>
                        <td class="action" style="display:flex; justify-content:space-around; align-items:center">
                            <li class="action-item" style="list-style-type: none; font-size: 18px">
                                <a href="" class="action-icon">
                                    <i style="color: #F69928" class="fa-solid fa-pen-to-square icon"></i>
                                </a>
                            </li>
                            <li class="action-item" style="list-style-type:none; font-size: 18px">
                                <a href="" class="action-icon" data-toggle="modal" data-target="#myModal">
                                    <i style="color: #F69928" class="fa-solid fa-trash-can icon"></i>
                                </a>
                            </li>
                            <li class="action-item" style="list-style-type: none; font-size: 18px">
                                <a href="" class="action-icon">
                                    <i style="color: #F69928" class="fa-solid fa-circle-info icon"></i>
                                </a>
                            </li>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">
                    Thông Báo
                </h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                Xác nhận xóa hội thảo ?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Hủy</button>
                <button type="button" class="button-lc">Xác nhận</button>
            </div>
        </div>
    </div>
</div>

</body>

</body>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>

    $('#create').click(function () {
        location.href = "@Url.Action("Create")";
    })

</script>



