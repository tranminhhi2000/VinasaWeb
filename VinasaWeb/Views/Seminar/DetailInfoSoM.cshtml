            <label for="tax">Mã số thuế</label>
        </div>

        <div class="input-wrapper">
            <input type="text" value="Smart City" readonly>
            <label for="name">Tên Hội Thảo</label>
        </div>

        <div class="input-wrapper">
            <input type="text" value="Công ty Cổ phần FPT " readonly>
